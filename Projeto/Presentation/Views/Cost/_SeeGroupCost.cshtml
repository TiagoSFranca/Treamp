@model Presentation.Models.ViewModels.GroupViewModel
@{
    ViewBag.Title = "Grupo do Custo";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title" id="myModalLabel">@ViewBag.Title</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover" id="dataTables-modal">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Members != null && Model.Members.Count > 0)
                    {
                        foreach (var item in Model.Members)
                        {
                            <tr class="odd gradeX">
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
</div>

<script>

    $('#dataTables-modal').DataTable({
        //responsive: true
    });
</script>