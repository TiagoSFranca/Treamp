@model Presentation.Models.ViewModels.CostViewCreate
@{
    ViewBag.Title = "Adicionar Gasto da Viagem";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title" id="myModalLabel">@ViewBag.Title</h3>
</div>
@using (@Html.BeginForm("AddGroupCost", "Cost", FormMethod.Post, new { @class = "form-horizontal form-modal" }))
{
    <div class="modal-body">
        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.UserListSelected)
                    <select multiple class="form-control" name="UserListSelected">
                        @foreach (var item in Model.Users)
                        {
                            <option value="@item.Id" selected> @item.FullName</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(m => m.UserListSelected, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.Price)
                    @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(c => c.IdTravel)
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-success">Adicionar Custo</button>
    </div>
}


@Scripts.Render("~/reloadModal")

