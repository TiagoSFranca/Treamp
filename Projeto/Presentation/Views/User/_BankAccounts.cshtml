@model List<Presentation.Models.ViewModels.BankAccountViewModel>
@{
    Layout = null;
}

<p></p>

@if (Model.Count < 2)
{
    <div class="row">
        <div class="col-lg-12">
            <a href="@Url.Action("AddAccount", "BankAccount")" class="btn-outline btn-primary btn pull-right" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-plus fa-fw"> </i>
                Adicionar Conta
            </a>
        </div>
    </div>
}
<p>
</p>

<div class="row">
    @if (Model.Count > 0)
    {
        <div class="panel-body">
            <div class="panel-group" id="accordion">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">NOME DA AGENCIA</a>
                                <a href="@Url.Action("EditProfile", "User")" data-toggle="modal" data-target="#myModal">
                                    <i class="fa fa-pencil-square-o color-custom pull-right"></i>
                                </a>
                                <a href="@Url.Action("EditProfile", "User")" data-toggle="modal" data-target="#myModal">
                                    <i class="fa fa-trash-o color-custom pull-right"></i>
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                DADOS
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
