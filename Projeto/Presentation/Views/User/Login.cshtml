@model Presentation.Models.ViewModels.UserViewLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Treamp</title>
    @Styles.Render("~/bootstrap/css")
    @Styles.Render("~/metis/css")
    @Styles.Render("~/theme/custom/css")
    @Styles.Render("~/font")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h2 class="text-center">TREAMP</h2>
                    </div>
                    <div class="panel-body">
                        @using (@Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form" }))
                        {
                            <fieldset>
                                <div class="form-group">
                                    @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login" } })
                                    @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Senha" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                                <div @*class="alert alert-danger text-center"*@ class="text-center">
                                    <h5>
                                    <small>
                                        @Html.ValidationMessage("CustomError", new { @class = "text-danger"})
                                    </small>
                                    </h5>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="Entrar" class="btn btn-lg btn-success btn-block" />
                                <div class="form-group">
                                    <br />
                                    <a class="primary">Esqueceu a senha?</a>
                                    <br />
                                    <a href="@Url.Action("Register", "User")" data-toggle="modal" data-target="#myModal">Cadastrar</a>
                                    @*<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                                            Launch Demo Modal
                                        </button>*@
                                </div>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
            @Html.Partial("_Modal")
        </div>
    </div>
    @Scripts.Render("~/jquery")
    @Scripts.Render("~/bootstrap/js")
    @Scripts.Render("~/metis/js")
    @Scripts.Render("~/theme/custom")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
