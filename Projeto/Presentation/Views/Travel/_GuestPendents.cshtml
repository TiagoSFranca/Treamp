@using Presentation.Models.ViewModels;
@model TravelUserViewIndex
<p></p>
<p>
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Origem</th>
                            <th>Destino</th>
                            <th>Data Inicial</th>
                            <th>Data Final</th>
                            <th>Grupo</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TravelUsers != null && Model.TravelUsers.Count > 0)
                        {
                            foreach (var item in Model.TravelUsers)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.Travel.Name</td>
                                    <td>@item.Travel.Destinations[0].City.Name - @item.Travel.Destinations[0].City.State.Abbreviation</td>
                                    <td>@item.Travel.Destinations[1].City.Name - @item.Travel.Destinations[1].City.State.Abbreviation</td>
                                    <td>@item.Travel.Destinations[0].Date.Date.ToShortDateString()</td>
                                    <td>@item.Travel.Destinations[1].Date.Date.ToShortDateString()</td>
                                    <td align="center">
                                        <a href="@Url.Action("SeeGroup", "Travel", new { idTravel = @item.IdTravel, idUser = @item.IdUser })" class="btn btn-outline btn-primary btn-circle" data-toggle="modal" data-target="#myModal">
                                            <i class="fa fa-eye fa-fw"></i>
                                        </a>
                                    </td>
                                    <td align="center">
                                        <a href="@Url.Action("DeleteInvite", "Travel", new { idTravel = @item.IdTravel })" class="btn btn-outline btn-danger btn-circle" data-toggle="modal" data-target="#myModal">
                                            <i class="fa fa-trash-o fa-fw"></i>
                                        </a>
                                        <a href="@Url.Action("AceptInvite", "Travel", new { idTravel = @item.IdTravel})" class="btn btn-outline btn-success btn-circle" data-toggle="modal" data-target="#myModal">
                                            <i class="fa fa-check fa-fw"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>