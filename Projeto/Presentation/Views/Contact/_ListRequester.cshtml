@model List<Presentation.Models.ViewModels.ContactViewModel>
@{
//Layout = "~/Views/Contact/_Layout.cshtml";
}
<p></p>
<div class="row">
    <div class="col-lg-12">
    </div>
</div>
<p>
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.Remittee.FullName</td>
                                    <td>@item.Remittee.Email</td>
                                    <td align="center">
                                        <a href="@Url.Action("DeleteContact", "Contact", new { idContact = @item.Id})" class="btn btn-outline btn-danger btn-circle" data-toggle="modal" data-target="#myModal">
                                            <i class="fa fa-trash-o fa-fw"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>